<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/launcher2" >

    <com.ab.view.sliding.AbSlidingPlayView
        android:id="@+id/mAbSlidingPlayView"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent" >
    </com.ab.view.sliding.AbSlidingPlayView>

    <Button
        android:id="@+id/enterBt"
        android:layout_width="173dp"
        android:layout_height="43dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="60dp"
        android:background="@drawable/guide_button_bg"
        android:text="开始体验"
        android:textColor="#006ab9" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="30dp" >

        <ImageView
            android:id="@+id/point1"
            android:layout_width="8dp"
            android:layout_height="8dp"
            android:background="@drawable/white_round_icon" />

        <ImageView
            android:id="@+id/point2"
            android:layout_width="8dp"
            android:layout_height="8dp"
            android:layout_marginLeft="12dp"
            android:background="@drawable/gray_round_icon" />

        <ImageView
            android:id="@+id/point3"
            android:layout_width="8dp"
            android:layout_height="8dp"
            android:layout_marginLeft="12dp"
            android:background="@drawable/gray_round_icon" />

        <ImageView
            android:id="@+id/point4"
            android:layout_width="8dp"
            android:layout_height="8dp"
            android:layout_marginLeft="12dp"
            android:background="@drawable/gray_round_icon" />
    </LinearLayout>

    <ImageView
        android:id="@+id/backBt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:padding="10dp"
        android:src="@drawable/button_selector_back" />

</RelativeLayout>